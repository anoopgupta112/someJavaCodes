	  static void reverseInteger(int n) {
		  if(n<0) {
			  String s = String.valueOf(n);
			 
				  StringBuilder sb = new StringBuilder(s);
				  sb.reverse();
				  System.out.print(sb);
			  
		  }
		  else {
		 
		
		  if(n==0) {
				 
			  return;
		  }
		   
		  int reverse = 0;   
		  int lastDigit = 0;   
		  
		  lastDigit = n % 10; 
		  reverse = reverse * 10 + lastDigit;   
		
		  System.out.print( reverse);
//		  count 
		  
		
		  
			
		
	 reverseInteger(n/10);}
		 
	   
	    
